<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">


    <EditText
            android:layout_width="409dp"
            android:layout_height="42dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextLong"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/test"
            android:textAlignment="center" android:hint="Longitude" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextLat" app:layout_constraintVertical_bias="0.509"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:background="@drawable/round_shape_btn"
            android:text="Get Location"
            android:layout_width="198dp"
            android:layout_height="52dp"
            android:id="@+id/button2" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_bold" android:textColor="@android:color/white"/>
    <Button
            android:background="@drawable/round_shape_btn"
            android:text="Post Location"
            android:layout_width="198dp"
            android:layout_height="52dp"
            android:id="@+id/test"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_bold" android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.426" android:layout_marginTop="224dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.907"/>
    <TextView
            android:text="Latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:textStyle="bold"
            android:textColor="#00A0D1" android:textSize="24sp"/>
    <TextView
            android:text="Longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.827" android:textStyle="bold"
            android:textAlignment="center" android:textColor="#00A0D1" android:textSize="24sp"/>
    <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button2"/>
    <EditText
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextLat" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/test" app:layout_constraintVertical_bias="0.674"
            android:textAlignment="center" android:hint="Latitude" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>